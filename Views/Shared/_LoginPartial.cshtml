@using VeterinariaSystem.Models

<ul class="navbar-nav">
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Perfil" title="Manage">Hola @(User.FindFirst("FullName")?.Value)!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Usuarios" asp-action="Logout" method="post">
        
             <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">Login</a>
    </li>
}
</ul>