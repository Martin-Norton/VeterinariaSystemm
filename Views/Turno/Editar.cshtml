@model VeterinariaSystem.Models.Turno

@{
    ViewData["Title"] = "Editar Turno";
}
<link rel="stylesheet" href="~/css/Turno/Edit.css">

<h2>Editar Turno</h2>

<form asp-action="Editar" method="post" class="formulario-turno">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Id_Mascota" />

    <div class="form-group">
        <label>Mascota</label>
        <input class="form-control" value="@ViewBag.NombreMascota" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Motivo"></label>
        <input asp-for="Motivo" class="form-control" />
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hora"></label>
        <select asp-for="Hora" class="form-control">
            <option value="">Seleccione una hora</option>
            <option value="09:00:00" selected="@(Model.Hora == TimeSpan.Parse("09:00:00"))">09:00</option>
            <option value="11:00:00" selected="@(Model.Hora == TimeSpan.Parse("11:00:00"))">11:00</option>
            <option value="15:00:00" selected="@(Model.Hora == TimeSpan.Parse("15:00:00"))">15:00</option>
            <option value="17:00:00" selected="@(Model.Hora == TimeSpan.Parse("17:00:00"))">17:00</option>
            <option value="19:00:00" selected="@(Model.Hora == TimeSpan.Parse("19:00:00"))">19:00</option>
        </select>
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
