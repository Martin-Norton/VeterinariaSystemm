@model Mascota
@{
    ViewData["Title"] = "Editar Mascota";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Especie" class="form-label"></label>
        <select asp-for="Especie" class="form-select">
            <option value="Felino">Felino</option>
            <option value="Canino">Canino</option>
        </select>
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Raza" class="form-label"></label>
        <input asp-for="Raza" class="form-control" />
        <span asp-validation-for="Raza" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Peso" class="form-label"></label>
        <input asp-for="Peso" class="form-control" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sexo" class="form-label"></label>
        <select asp-for="Sexo" class="form-select">
            <option value="Macho">Macho</option>
            <option value="Hembra">Hembra</option>
        </select>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>
 <div class="mb-3">
    <label class="form-label">Due√±o</label>
    <input type="text" class="form-control" value="@Model.Dueno?.Nombre , @Model.Dueno?.Apellido" disabled />
    <input type="hidden" asp-for="Id_Dueno" />
</div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    @if (User.IsInRole("Dueno"))
    {
        <a asp-action="MisMascotas" class="btn btn-secondary">Cancelar</a>
    }else
    {
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
