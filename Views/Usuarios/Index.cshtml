@model IEnumerable<VeterinariaSystem.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<link rel="stylesheet" href="~/css/Usuario/Index.css" />
<h1>@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Usuario</a>
    <a asp-action="CrearVeterinarioUsuario" class="btn btn-primary">Crear Usuario Veterinario</a>
    <a asp-action="BuscarDuenoPorDni" class="btn btn-primary">Crear Usuario Due√±o</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                Avatar
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().RolNombre)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                 <td>
                    @if (!string.IsNullOrEmpty(item.Avatar))
                    {
                        <img src="@item.Avatar" alt="Avatar" width="50" class="img-thumbnail" />
                    } else {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RolNombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar"><i class="bi bi-pencil"></i>Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles"><i class="bi bi-search"></i>Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar"><i class="bi bi-trash"></i>Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-4">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.Pagina ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
