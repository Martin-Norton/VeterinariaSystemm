@model VeterinariaSystem.Models.Usuario
@{
    ViewData["Title"] = "Registrar Cuenta - Dueño";
    var nombre = ViewBag.NombreCompleto as string;
    var idDueno = ViewBag.IdDueno;
}

<h2 class="mb-4">Registro de Cuenta para @nombre</h2>

<form asp-action="RegistrarCuentaDueno" method="post" enctype="multipart/form-data">
    <input asp-for="DuenoId" type="hidden" value="@ViewBag.IdDueno"/>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" id="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" id="Apellido" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="Email" readonly/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Clave">Contraseña</label>
        <input asp-for="Clave" type="password" class="form-control" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmarClave">Confirmar Contraseña</label>
        <input id="ConfirmarClave" name="ConfirmarClave" class="form-control" type="password" required />
    </div>

    <div class="form-group">
        <label asp-for="AvatarFile">Avatar (opcional)</label>
        <input asp-for="AvatarFile" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Crear Cuenta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
